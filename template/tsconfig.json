{
  "compilerOptions": {
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./lib",
    "declarationDir": "./lib/types",
    "lib": [
      "es2015",
      "es2016"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "compileOnSave": false,
  "include": [
    "./src/**/*"
  ]
}
